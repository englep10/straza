<%= form_for [ @movement] do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :time %>
    <%= f.text_field :time %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :movement_key %>
    <%= f.text_field :movement_key %>
  </p>
  <%= f.submit %>
<% end %>